{
  "appId": "com.jotify.app",
  "productName": "Jotify",
  "copyright": "Copyright Â© 2025 Jorge",
  "directories": {
    "output": "../JotifyBuild"
  },
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "node_modules/sql.js/dist/sql-wasm.wasm",
      "to": "sql-wasm.wasm"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "build/icon.ico"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true
  }
}
